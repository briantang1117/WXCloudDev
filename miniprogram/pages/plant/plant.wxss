/* pages/plant/plant.wxss */
.bg{
  background-color: #b4d6df;
}
.pic{
  height: 500rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}
.pic image {
  width: 600rpx;
  height: 600rpx;
}
.result{
  background: #f7f7f7;
  padding: 40rpx 30rpx 30rpx 24rpx;
  display: flex;
  justify-content: space-between;
}
.result-text{
  font-size: 30rpx;
}

.result-friends{
  background-color: #96cad8;
  border-radius: 10rpx;
  padding: 4rpx 8rpx;
}

.photo-field {
  margin-bottom: 140rpx;
}

.photo{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 30rpx 24rpx;
}

.photo-attr{
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  padding: 30rpx 30rpx;
  color: #479ac7;
}

.photo-attr:nth-child(2n){
  background-color: #f3e1e1;
}



.btn{
  position: fixed;
  bottom: 80rpx;
  width: 100%;
}

.btn button{
  background: linear-gradient(#f3e1e1,#479ac7);
}

.introd{
  position: fixed;
  background-color: #000;
  opacity: 0.7;
  color: #fff;
  font-size: 30rpx;
}

.introd-view{
  word-break: keep-all;
  word-wrap: break-word;
  width: 600rpx;
  height: 600rpx;
  margin-left: 40rpx;
  overflow-y: auto;
}

.introd-img{
  margin-left: 280rpx;
}